[Unit]
Description=Mattermost
After=network.target
{% if mattermost_db_cfg.host | default('localhost') in ['localhost', '127.0.0.1'] -%}
{% if mattermost_db_cfg.type == 'mysql' -%}
After=mysql.service
BindsTo=mysql.service
{% elif mattermost_db_cfg.type == 'postgres' -%}
After=postgresql.service
BindsTo=postgresql.service
{% endif %}
{% endif %}

[Service]
Type=notify
ExecStart={{ mattermost_home }}/bin/mattermost
TimeoutStartSec=3600
KillMode=mixed
Restart=always
RestartSec=10
WorkingDirectory={{ mattermost_home }}
User={{ mattermost_user }}
Group={{ mattermost_user }}
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target
